{
  "manifest_version": 3,
  "name": "Job Application Autofill",
  "version": "1.0.0",
  "description": "Auto-fill job application forms on Workday and Greenhouse",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.workday.com/*",
    "*://*.myworkdayjobs.com/*",
    "*://*.greenhouse.io/*",
    "*://boards.greenhouse.io/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.workday.com/*",
        "*://*.myworkdayjobs.com/*",
        "*://*.greenhouse.io/*",
        "*://boards.greenhouse.io/*"
      ],
      "js": [
        "content/fieldMatcher.js",
        "content/formFiller.js",
        "content/learner.js",
        "content/content.js"
      ],
      "css": [
        "styles/highlight.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["data/profile.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
